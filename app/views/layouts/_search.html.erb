<%= form_tag(search_path, method: "get", class: 'form-horizontal', id: "search-form") do %>
<div class="input-group">
  <%= text_field_tag :search, params[:search], placeholder: "e.g. Grand Theft Auto", class: "form-control", id: 'search-box' %>
  <span class="input-group-btn"> <%= submit_tag "Search", class: "btn btn-primary" %> </span>
</div>
<% end %>
